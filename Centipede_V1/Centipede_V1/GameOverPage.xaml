<Page
    x:Class="Centipede_V1.GameOverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Centipede_V1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:Name="background" HorizontalAlignment="Center" Height="999" VerticalAlignment="Center" Width="1499" Background="#FFF5F3B6">
            <TextBlock Canvas.Left="539" Canvas.Top="300" Text="Game Over!" TextWrapping="Wrap" Height="180" Width="420" FontFamily="Stencil" FontSize="72" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock x:Name="score_box" Canvas.Left="579" Canvas.Top="529" Text="Score:" TextWrapping="Wrap" Height="97" Width="227" FontFamily="Stencil" FontSize="36" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBox x:Name="scorelabel_box" Canvas.Left="733" Canvas.Top="531" Text="0" Height="38" Width="193" FontFamily="Stencil" FontSize="36" SelectionHighlightColor="#00000000" Background="#00000000" BorderBrush="#00000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Canvas>

    </Grid>
</Page>
